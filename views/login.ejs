<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet"  href="/stylesheet/login.css">
  </head>
  <body>
    <div class="loginForm">
      <form method="POST" action="./login">
        <div class="loginForm">
          <h3>Login</h3>
          <br>
          <label>Nickname</label>
          <input type="text" name="nickname" class="nicknameForm" />
          <br>
          <label>Password</label>
          <input type="text" name="password" class="passwordForm" />
          <br>
          <br>
          <div class="btnForm">
            <input type="submit" value="Login" class="sendBtn" />
          </div>
        </div>
      </form>
    </div>
  </body>
</html>